# =============================================================================
# Financial IDR Pipeline - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# 
# Usage: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_PORT=5000
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Neo4j Configuration (Optional)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# -----------------------------------------------------------------------------
# Redis Configuration (Optional)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# LLM API Keys (Optional - for enhanced GraphRAG)
# -----------------------------------------------------------------------------
# OpenAI API Key
OPENAI_API_KEY=

# Anthropic API Key
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Data Source API Keys
# -----------------------------------------------------------------------------
# SEC EDGAR User Agent (required format: "AppName contact@email.com")
SEC_USER_AGENT=Financial-IDR research@example.com

# FRED API Key (get from https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=

# -----------------------------------------------------------------------------
# Nginx Configuration (Optional)
# -----------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
